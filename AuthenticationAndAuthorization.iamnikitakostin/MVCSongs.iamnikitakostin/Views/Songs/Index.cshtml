@model MVCSongs.Models.SongGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Songs" asp-action="Index" method="get">
    <p>
        <select asp-for="SongGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        <label>Enter Author/Song Name: <input type="text" name="SearchQuery"/></label>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].TimesListened)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Songs!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimesListened)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
