@model TransactionViewModel

<div class="row mb-3">
    <div class="col-2 d-flex align-items-center">
        <label asp-for="Name" class="form-label mb-0"></label>
    </div>
    <div class="col-10">
        <input asp-for="Name" class="form-control" readonly />
    </div>
</div>

<div class="row mb-3">
    <div class="col-2 d-flex align-items-center">
        <label asp-for="Date" class="form-label mb-0"></label>
    </div>
    <div class="col-10">
        <input asp-for="Date" class="form-control" readonly />
    </div>
</div>

<div class="row mb-3">
    <div class="col-2 d-flex align-items-center">
        <label asp-for="Amount" class="form-label mb-0"></label>
    </div>
    <div class="col-10">
        <input asp-for="Amount" class="form-control" readonly />
    </div>
</div>

<div class="row mb-3">
    <div class="col-2 d-flex align-items-center">
        <label asp-for="CategoryId" class="form-label mb-0"></label>
    </div>
    <div class="col-10">
        <input asp-for="Category!.Name" class="form-control" readonly></input>
    </div>
</div>
    
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
</form>

